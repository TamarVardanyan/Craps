import random
def dice():
  dice1=random.randint(1,6)
  dice2=random.randint(1,6)
  return (dice1, dice2)
def game(dices): 
  dice1, dice2=dices
  print('The sum of dice is  {} + {} ={}'.format(dice1, dice2, sum(dices))) 
value=dice()
game(value)
first_throw=sum(value)
if first_throw in (7,11):
   output='You won'
elif first_throw in (2,3,12):
  output='You lose'
else:
  output='Next round'
  goal_number=first_throw
  print('Now your goal number is', goal_number)

while output=='Next round':
  value=dice()
  game(value)
  first_throw=sum(value)
  if first_throw == goal_number:
      output='You won'     
  elif first_throw==7:
     output='You lose'
if output=='You won':
    print("You won")  
else:
  print('You lose')
